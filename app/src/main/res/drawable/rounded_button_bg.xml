<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom Shadow Layer (Blue/Purple) -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="8dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#6D28D9" />
            <corners android:radius="120dp" />
        </shape>
    </item>

    <!-- Main Button Layer (Red) -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF2D2D" />
            <corners android:radius="120dp" />
        </shape>
    </item>

</layer-list>